{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true, 
    "strict": true,
    "rootDir": "src/main/resources/static/scripts/ts",
    "outDir": "src/main/resources/static/scripts/js",
    "lib": ["es2022", "dom", "dom.iterable"]
  },
    "include": [
        "src/**/*.ts"
    ]
}
